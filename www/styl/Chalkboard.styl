&.chalkboard
  font-family 'Shadows Into Light Two', cursive
  background transparent url('./img/chalk.jpg')
  background-size cover
  position relative
  width 1000px
  height 600px
  svg
    position absolute
    top 0px
    left 0px
    rect
      fill white
    .tick
      text
        fill white
      text.country
        opacity 0
        fill white
      &.active
        text.country
          opacity 1
      &.cz
        text.country
          fill #f88
          text-decoration underline
          opacity 0.8
        rect
        text.count
          display none
    .hoverables
      rect
        fill transparent
    g.explanatory-text
      text
        fill #fff
        font-size 24px
      &.disabled
        display none
    g.triangles
      polygon.disabled
        display none

  h2
    position absolute
    top 0px
    left 40px
    font-size 30px
    font-weight normal
    color white
  &.money
    .tick
      text.count
        opacity 0
      &.active-count
        text.count
          opacity 1
      &.active-country
        text.country
          opacity 1
    g.mouse-is-active
      .tick
        text
          opacity 0 !important
        &.active-mouse
          text.count
          text.country
            opacity 1 !important
